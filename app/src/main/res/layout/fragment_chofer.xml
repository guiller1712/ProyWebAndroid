<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".chofer"
    android:background="@color/colorWhite">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/choferTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorFont"
        android:textAlignment="textStart"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="¡Hola!" />

    <TextView
        android:id="@+id/datosChoferTitle"
        app:layout_constraintTop_toBottomOf="@id/choferTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:paddingLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorFont"
        android:textAlignment="textStart"
        android:textSize="14dp"
        android:text="Estos son tus datos con la empresa" />

    <TextView
        android:id="@+id/celularChoferTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/datosChoferTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingLeft="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorFont"
        android:textAlignment="textStart"
        android:textSize="14dp"
        android:textStyle="bold"
        android:text="Número de celular:"/>

    <TextView
        android:id="@+id/celularChoferText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/datosChoferTitle"
        app:layout_constraintLeft_toRightOf="@+id/celularChoferTitle"
        android:paddingLeft="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorFont"
        android:textAlignment="textStart"
        android:textSize="14dp"
        android:text=""/>

    <TextView
        android:id="@+id/correoChoferTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/celularChoferTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingLeft="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorFont"
        android:textAlignment="textStart"
        android:textSize="14dp"
        android:textStyle="bold"
        android:text="Correo electrónico:"/>

    <TextView
        android:id="@+id/correoChoferText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/celularChoferTitle"
        app:layout_constraintLeft_toRightOf="@+id/correoChoferTitle"
        android:paddingLeft="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorFont"
        android:textAlignment="textStart"
        android:textSize="14dp"
        android:text=""/>

    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar sesión"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@color/colorPrimary"
        android:textStyle="bold"/>

</android.support.constraint.ConstraintLayout>